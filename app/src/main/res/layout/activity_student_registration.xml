<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nougatstudio.terayahipyarhai.StudentRegistration">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="3dp"
        app:cardElevation="5dp">

        <ViewSwitcher
            android:id="@+id/viewSwitcherStudentRegistration"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

          <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:orientation="vertical">

                        <android.support.v7.widget.CardView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="30dp"
                            android:background="@color/GreyLike"
                            app:cardCornerRadius="3dp"
                            app:cardElevation="2dp"
                            app:cardMaxElevation="2dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="0.1dp"
                                android:background="@color/white">


                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_vertical"
                                    android:layout_margin="2dp"
                                    android:background="@color/GreyLike">


                                    <ImageView
                                        android:id="@+id/schoolLogo"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_margin="0.01dp"
                                        android:background="@color/white"
                                        android:src="@drawable/schoollogodummy" />
                                </RelativeLayout>
                            </RelativeLayout>
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView

                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="20dp"
                            android:elevation="5dp"
                            app:cardCornerRadius="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginEnd="10dp"
                                android:layout_marginStart="10dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/schoolCountrySpinnerIcon"
                                    android:layout_width="@dimen/image_icon"
                                    android:layout_height="@dimen/image_icon"
                                    android:layout_gravity="center_vertical"
                                    android:src="@drawable/countryr" />

                                <Spinner
                                    android:id="@+id/schoolCountrySpinner"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:entries="@array/country"
                                    android:textAlignment="center" />
                            </LinearLayout>
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView

                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="20dp"
                            android:elevation="5dp"
                            app:cardCornerRadius="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginEnd="10dp"
                                android:layout_marginStart="10dp"
                                android:orientation="horizontal"
                                android:weightSum="1">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:layout_weight="0.5"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/schoolStateIcon"
                                        android:layout_width="@dimen/image_icon"
                                        android:layout_height="@dimen/image_icon"
                                        android:layout_gravity="center_vertical"
                                        android:src="@drawable/stater" />

                                    <Spinner
                                        android:id="@+id/schoolStateSpinner"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:entries="@array/City"
                                        android:textAlignment="center" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:layout_marginStart="10dp"
                                    android:layout_weight="0.5"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/schoolCityIcon"
                                        android:layout_width="@dimen/image_icon"
                                        android:layout_height="@dimen/image_icon"
                                        android:layout_gravity="center_vertical"
                                        android:src="@drawable/cityr"/>

                                    <Spinner
                                        android:id="@+id/schoolCity"
                                        android:layout_width="fill_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:entries="@array/City"
                                        android:textAlignment="center" />
                                </LinearLayout>

                            </LinearLayout>
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView

                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginEnd="5dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="20dp"
                            android:elevation="5dp"
                            app:cardCornerRadius="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginEnd="10dp"
                                android:layout_marginStart="10dp"
                                android:orientation="horizontal">

                                <ImageView

                                    android:id="@+id/SchoolSelectionIcon"
                                    android:layout_width="@dimen/image_icon"
                                    android:layout_height="@dimen/image_icon"
                                    android:layout_gravity="center_vertical"
                                    android:src="@drawable/checkg" />

                                <Spinner
                                    android:id="@+id/schoolSelectionSinner"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:entries="@array/country"
                                    android:scrollbarStyle="outsideOverlay"
                                    android:textAlignment="center" />
                            </LinearLayout>
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.ButtonBarLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp">

                            <Button
                                android:id="@+id/proceedToNext"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Proceed To next" />
                        </android.support.v7.widget.ButtonBarLayout>

                        <android.support.v7.widget.ButtonBarLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <Button
                                android:id="@+id/cancelRegistrationButton"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Cancel" />
                        </android.support.v7.widget.ButtonBarLayout>

                    </LinearLayout>

                </ScrollView>
</RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/studentNameIcon"
                                android:layout_width="@dimen/image_icon"
                                android:layout_height="@dimen/image_icon"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/modifypersonr" />

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical">

                                <EditText
                                    android:id="@+id/studentName"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="5dp"
                                    android:gravity="center_vertical"
                                    android:hint="Student Name"
                                    android:inputType="textPersonName"
                                    android:maxLength="25"
                                    android:textColor="@color/Darkgreen" />
                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/studentFatherIcon"
                                android:layout_width="@dimen/image_icon"
                                android:layout_height="@dimen/image_icon"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/fatherr" />

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical">

                                <EditText
                                    android:id="@+id/studentFather"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="5dp"
                                    android:gravity="center_vertical"
                                    android:hint="Father Name"
                                    android:inputType="textPersonName"
                                    android:maxLength="25"/>
                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/studentMotherIcon"
                                android:layout_width="@dimen/image_icon"
                                android:layout_height="@dimen/image_icon"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/fatherr" />

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical">

                                <EditText
                                    android:id="@+id/studentMotherName"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="5dp"
                                    android:gravity="center_vertical"
                                    android:hint="Mother name"
                                    android:inputType="textPersonName"
                                    android:maxLength="25" />
                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/studentSchoolIcon"
                                android:layout_width="@dimen/image_icon"
                                android:layout_height="@dimen/image_icon"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/schoolr" />

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical">

                                <EditText
                                    android:id="@+id/studentSchoolID"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="5dp"
                                    android:gravity="center_vertical"
                                    android:hint="School Name"
                                    android:inputType="textAutoComplete"
                                    android:maxLength="105"
                                    android:maxLines="5" />
                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/studentClassIcon"
                                android:layout_width="@dimen/image_icon"
                                android:layout_height="@dimen/image_icon"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/bookr" />

                            <Spinner
                                android:id="@+id/studentClassSpinner"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:entries="@array/className"
                                android:textAlignment="center" />
                        </LinearLayout>


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp">
                            <Spinner
                                android:layout_centerInParent="true"
                                android:id="@+id/genderSpinner"
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                android:entries="@array/gender"
                                android:textAlignment="center" />
                            <ImageView
                                android:layout_toLeftOf="@id/genderSpinner"
                                android:id="@+id/studentGenderIcon"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_centerVertical="true"
                                android:src="@drawable/genderr" />


                        </RelativeLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/studentEmailIcon"
                                android:layout_width="@dimen/image_icon"
                                android:layout_height="@dimen/image_icon"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/emailr" />

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical">

                                <EditText
                                    android:id="@+id/emailID"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="5dp"
                                    android:gravity="center_vertical"
                                    android:hint="Email ID"
                                    android:inputType="textEmailAddress"
                                    android:maxLength="50" />
                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/studentDobIcon"
                                android:layout_width="@dimen/image_icon"
                                android:layout_height="@dimen/image_icon"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/alarmr" />

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical">

                                <EditText
                                    android:id="@+id/dob"
                                    android:layout_width="200dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="5dp"
                                    android:gravity="center_vertical"
                                    android:hint="D.O.B"
                                    android:inputType="date"
                                    android:maxLength="50" />
                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/studentUidIcon"
                                android:layout_width="@dimen/image_icon"
                                android:layout_height="@dimen/image_icon"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/idr" />

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical">

                                <EditText
                                    android:id="@+id/studentUid"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="5dp"
                                    android:gravity="center_vertical"
                                    android:hint="UId"
                                    android:inputType="number"
                                    android:maxLength="12"/>
                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/studentAddressIcon"
                                android:layout_width="@dimen/image_icon"
                                android:layout_height="@dimen/image_icon"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/schooladdressr" />

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical">

                                <EditText
                                    android:id="@+id/studentAddress"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="5dp"
                                    android:gravity="center_vertical"
                                    android:hint=" Address"
                                    android:inputType="textPostalAddress"
                                    android:maxLength="100"
                                    android:maxLines="5" />
                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/studentPincodeIcon"
                                android:layout_width="@dimen/image_icon"
                                android:layout_height="@dimen/image_icon"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/pincoder" />

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical">

                                <EditText
                                    android:id="@+id/studentPincode"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="5dp"
                                    android:gravity="center_vertical"
                                    android:hint="Pincode"
                                    android:inputType="number"
                                    android:maxLength="6"/>
                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"

                            android:layout_marginEnd="10dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/studentContactIcon"
                                android:layout_width="@dimen/image_icon"
                                android:layout_height="@dimen/image_icon"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/phoner" />

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical">

                                <EditText
                                    android:id="@+id/studentContactNo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="5dp"
                                    android:gravity="center_vertical"
                                    android:hint="Contact No"
                                    android:inputType="number"
                                    android:maxLength="12" />
                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>
                        <android.support.v7.widget.ButtonBarLayout
                            android:layout_width="match_parent"
                            android:layout_marginTop="10dp"
                            android:layout_height="wrap_content">

                            <Button
                                android:id="@+id/RegisterButton"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Register" />
                        </android.support.v7.widget.ButtonBarLayout>

                    </LinearLayout>

                </ScrollView>

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/floatingActionButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="16dp"
                    android:layout_marginEnd="16dp"
                    android:clickable="true"
                    app:fabSize="normal"
                    app:rippleColor="@color/white"
                    app:srcCompat="@drawable/backarroww" />
            </RelativeLayout>

        </ViewSwitcher>
    </android.support.v7.widget.CardView>
</android.support.design.widget.CoordinatorLayout>
